<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menufiles.BaseActivity"
    android:layout_gravity="bottom"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:id="@+id/bottomNavBar"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:foregroundGravity="bottom"
        android:background="@drawable/base_navbar">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/radioGroup1"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Home"
                android:layout_weight="1"
                android:button="@null"
                android:padding="2dp"
                android:checked="false"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:id="@+id/buttonHome"
                android:drawableTop="@drawable/home_icon">

            </RadioButton>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Category"
                android:layout_weight="1"
                android:button="@null"
                android:padding="2dp"
                android:checked="false"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:id="@+id/buttonCategory"
                android:drawableTop="@drawable/category_icon">

            </RadioButton>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Like Events"
                android:layout_weight="1"
                android:button="@null"
                android:padding="2dp"
                android:checked="false"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:id="@+id/buttonLikeEvents"
                android:drawableTop="@drawable/like_icon">

            </RadioButton>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Live Events"
                android:layout_weight="1"
                android:button="@null"
                android:padding="2dp"
                android:checked="false"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:id="@+id/buttonLiveEvent"
                android:drawableTop="@drawable/live_show_icon">

            </RadioButton>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Profile"
                android:layout_weight="1"
                android:button="@null"
                android:padding="2dp"
                android:checked="false"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:id="@+id/buttonProfile"
                android:drawableTop="@drawable/user_profile_icon">

            </RadioButton>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dynamicContent"
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        android:paddingBottom="40dp"
        android:layout_gravity="bottom">

    </LinearLayout>

</FrameLayout>