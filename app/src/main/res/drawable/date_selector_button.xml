<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#FF009E"
                android:endColor="#D05492"
                android:angle="90"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <gradient
                android:startColor="#FB76B4"
                android:endColor="#FF00B2"
                android:angle="90"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

</selector>
